<?xml version="1.0" encoding="utf-8"?>



    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.jnlycklama.membr.MainActivity">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="#EFEFEF">

            <!--  Header  Starts-->
            <LinearLayout android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#3F5765"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip">
                    <TextView android:id="@+id/header_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:layout_marginBottom="20dip"
                        android:layout_marginStart="20dip"
                        android:layout_marginLeft="20dip"
                        android:text="@string/register_title"
                        android:textSize="20dip"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="left"
                        android:layout_alignParentLeft="true"/>
                    <Button android:id="@+id/btnSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="10dip"
                        android:background="#BDD4DE"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:text="Settings"/>
                </RelativeLayout>
                <!-- Logo Start-->
                <!-- <ImageView android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"/> -->
                <!-- Logo Ends -->
            </LinearLayout>
            <!--  Header Ends -->
            <!-- Footer Start -->
            <!-- <LinearLayout android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="90dip"
                android:background="@layout/footer_repeat"
                android:layout_alignParentBottom="true">
            </LinearLayout> -->
            <!-- Footer Ends -->

                <!--  Email Label -->

            <!-- Login Form Ends -->
            <Button android:id="@+id/btnMembers"
                android:textSize="40dip"
                android:textAllCaps="false"
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dip"
                android:layout_marginRight="100dip"
                android:background="#BDD4DE"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Members"/>
            <Button android:id="@+id/btnEvents"
                android:layout_width="wrap_content"
                android:textSize="40dip"
                android:textAllCaps="false"
                android:padding="10dip"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dip"
                android:layout_marginLeft="100dip"
                android:background="#BDD4DE"
                android:layout_gravity="left"
                android:text="Events"/>

        </RelativeLayout>
    </ScrollView>


